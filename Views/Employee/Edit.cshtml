@model Employee
@{
    ViewData["title"] = "Edit Employee";
}

<div class="row p-5">
    <div class="col-6">
        <a asp-action="Index" asp-controller="Employee" class="nav-link w-auto">
            Kembali
        </a>
        <form asp-action="Update" asp-route-id="@Model.Id" method="post">
            <div class="form-group">
                <label class="form-label" asp-for="Nip">Nip</label>
                <input type="text" class="form-control" asp-for="Nip" value="@Model.Nip">
                <span asp-validation-for="Nip" class="text-danger"></span>

            </div>
            <div class="mt-3 form-group">
                <label class="form-label" asp-for="Name">Name</label>
                <input type="text" class="form-control" asp-for="Name" value="@Model.Name">
                <span asp-validation-for="Name" class="text-danger"></span>

            </div>
            <div class="mt-3 form-group">
                <label class="form-label" asp-for="Role">Role</label>
                <input type="text" class="form-control" asp-for="Role" value="@Model.Role">
                <span asp-validation-for="Role" class="text-danger"></span>

            </div>
            <button type="submit" class="btn btn-success mt-3">Submit</button>
        </form>
    </div>
</div>